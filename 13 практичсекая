from tkinter import *

root =Tk()
root['bg'] = '#fafafa'
root.title('Приложение погоды')


frame = Frame(root, bg='#99FF99', bd=5)
frame.place(relx = 0.15, rely=0.15, relwidth=0.7, relheight=0.7)

title=Label(frame, text='Прогноз погоды', bg='pink', font=40)
title.pack()

loginInput = Entry(frame, bg='white',font=30)
loginInput.pack()

passField = Entry(frame, bg='white',show='*')
passField.pack

btn = Button(frame)
root.mainloop()
